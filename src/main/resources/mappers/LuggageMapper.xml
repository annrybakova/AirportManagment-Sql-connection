<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.airport.mybatis.mappers.LuggageMapper">

    <resultMap id="LuggageResult" type="com.solvd.airport.models.Luggage">
        <id property="luggageId" column="luggage_id"/>
        <result property="passengerId" column="passenger_id"/>
        <result property="weight" column="weight"/>
    </resultMap>

    <select id="getById" parameterType="int" resultMap="LuggageResult">
        SELECT luggage_id, passenger_id, weight 
        FROM luggage 
        WHERE luggage_id = #{id}
    </select>

    <select id="getAll" resultMap="LuggageResult">
        SELECT luggage_id, passenger_id, weight 
        FROM luggage
    </select>

    <insert id="add" parameterType="com.solvd.airport.models.Luggage" useGeneratedKeys="true" keyProperty="luggageId">
        INSERT INTO luggage (passenger_id, weight) 
        VALUES (#{passengerId}, #{weight})
    </insert>

    <update id="update" parameterType="com.solvd.airport.models.Luggage">
        UPDATE luggage 
        SET passenger_id=#{passengerId}, weight=#{weight}
        WHERE luggage_id=#{luggageId}
    </update>

    <insert id="insert" parameterType="com.solvd.airport.models.Luggage">
        INSERT INTO luggage (passenger_id, weight)
        VALUES (#{passengerId}, #{weight});
    </insert>

    <delete id="delete" parameterType="int">
        DELETE FROM luggage WHERE luggage_id=#{id}
    </delete>

    <select id="getByPassengerId" parameterType="int" resultMap="LuggageResult">
        SELECT luggage_id, passenger_id, weight
        FROM luggage
        WHERE passenger_id = #{passengerId}
    </select>

</mapper>
